<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- thisMatch.matchName %></title>
    <link href="/CSS/global.css" rel="stylesheet"/>
</head>
<body>

    <%-include('../Components/navigation',{seasonData}) %>

    <main>
      <%-include('../Components/singleMatch',{thisMatch}) %>

      <div id="plays">
        <% for(let i = 0; i < plays.length; i++) { %>
          <p><%= plays[i] %></p>
        <% } %>
      </div>
      
    </main>

    <div class="content">

        <%-include('../Components/matches',{matchData}) %>
        
    </div>
    <script>
      const playsContainer = document.getElementById('plays');
       playsContainer.scrollTop = playsContainer.scrollHeight;
       const prevPlays = JSON.parse('<%- JSON.stringify(plays) %>'); 
       const gameId = '<%- JSON.stringify(thisMatch.id) %>';
   </script>
    <%-include('../Components/footer') %>
    <script src="/JS/sseMatches.js"></script>
    <script src="/JS/ssePlays.js"></script>
</body>
</html>